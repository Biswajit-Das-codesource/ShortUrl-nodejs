<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% if (locals.id) { %>
     <p>url genearted : http://localhost:8000/url/<%= id %></p>
    <% } %>
    <h1>URL SHORTNER</h1>
   <form method="post" action="/url">
    <label>enter your origianl url</label>
    <input type="text" placeholder="enter" name="url">
    <button type="submit">generate</button>
   </form>   
   <div>
    <% if (locals.urls) { %>
     <table>
        <thead>
            <th>S.NO</th>
            <th>shortID</th>
            <th>redirect url</th>
            <th>Click</th>
        </thead>
        <tbody>
            <% urls.forEach((url,index) => { %>
                <tr>
                <td><%= index +1 %> </td>
                <td><%= url.shortId %> </td>
                <td> <%= url.redirectURL %></td>
                <td><%= url.visithistory.length %> </td>
            </tr>
            <% }) %>
        </tbody>
     </table>
    <% } %>
   </div>
</body>
</html>